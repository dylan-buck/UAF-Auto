# UAF Sage 100 Middleware - Environment Variables
# Copy this file to .env and update with your actual values

# =============================================================================
# API Configuration
# =============================================================================
NODE_ENV=development
API_PORT=3000
API_KEY=your_api_key_here_change_in_production

# =============================================================================
# Sage 100 Configuration
# =============================================================================
SAGE_USERNAME=your_sage_username
SAGE_PASSWORD=your_sage_password
SAGE_COMPANY=TST
SAGE_SERVER_PATH=\\uaf-erp\Sage Premium 2022\MAS90\Home

# =============================================================================
# BOI Service Configuration
# =============================================================================
BOI_SERVICE_URL=http://sage-boi-service:5000
BOI_SESSION_POOL_SIZE=3
BOI_SESSION_TIMEOUT=300

# =============================================================================
# Redis Configuration
# =============================================================================
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# =============================================================================
# Logging Configuration
# =============================================================================
LOG_LEVEL=info
LOG_DIR=./logs

# =============================================================================
# Queue Configuration
# =============================================================================
QUEUE_CHECK_INTERVAL=10000
QUEUE_MAX_RETRIES=3
QUEUE_RETRY_DELAY=30000

# =============================================================================
# Job Retention (in seconds)
# =============================================================================
JOB_COMPLETED_TTL=604800
JOB_FAILED_TTL=0

# =============================================================================
# Production Settings
# =============================================================================
# When deploying to production:
# 1. Set NODE_ENV=production
# 2. Change API_KEY to a strong random value
# 3. Update SAGE_COMPANY to MAS_UAF
# 4. Set strong REDIS_PASSWORD
# 5. Update SAGE_PASSWORD
